{
  "data_paths": {
    "raw_data": "data/raw",
    "processed_data": "data/processed",
    "train_data": "data/processed/train",
    "val_data": "data/processed/val",
    "test_data": "data/processed/test"
  },
  "split_ratios": {
    "train": 0.7,
    "val": 0.15,
    "test": 0.15
  },
  "random_state": 42,
  "preprocessing": {
    "target_size": [512, 512],
    "resize_mode": "resize",
    "target_format": "png",
    "normalize": true,
    "grayscale": false
  },
  "augmentation": {
    "enabled": true,
    "rotation_range": 15,
    "horizontal_flip": true,
    "vertical_flip": false,
    "brightness_range": [0.8, 1.2],
    "contrast_range": [0.8, 1.2]
  },
  "datasets": {
    "CASIA2": {
      "enabled": true,
      "only_copy_move": true
    },
    "comofod_small": {
      "enabled": true,
      "use_all_variants": true
    },
    "COVERAGE": {
      "enabled": true
    },
    "MICC": {
      "enabled": true,
      "sub_datasets": ["MICC-F220", "MICC_F600", "MICC-F2000"]
    },
    "FAU": {
      "enabled": true,
      "include_benchmark": true,
      "include_transforms": true
    }
  }
}

